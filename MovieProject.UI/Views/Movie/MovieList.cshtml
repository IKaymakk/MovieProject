<script>
    $(document).ready(function () {
        function loadMovies(sortBy, page) {
            $.ajax({
                url: '/Movie/FilteredMovieList',
                type: 'GET',
                data: { SortBy: sortBy, Page: page },
                success: function (result) {
                    // Dönen HTML'i div içerisine yerleştir
                    $('.xd').html('');
                    $('.xd').html(result);
                },
                error: function () {
                    alert('Bir hata oluştu, lütfen tekrar deneyin.');
                }
            });
        }

        // Sıralama değiştiğinde film listesini yükle
        $('#filterbar').change(function () {
            var selectedValue = $(this).val();
            loadMovies(selectedValue, 1); // İlk sayfadan başla
        });

        // Sayfa butonlarına tıklandığında film listesini yükle
        $(document).on('click', '.pagination2 a', function (e) {
            e.preventDefault();
            var page = $(this).data('page');
            var sortBy = $('#filterbar').val();
            loadMovies(sortBy, page);
        });
    });
</script>


