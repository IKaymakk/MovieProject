@{
    ViewData["Title"] = "MovieList";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<style>
    /* Arama çubuğu kapsayıcı stil */
    .search-container {
        width: 100%; /* Genişlik: Sayfanın %80'i */
        max-width: 1150px; /* Maksimum genişlik */
        margin: 0 auto; /* Ortalamak için margin */
        padding: 10px 0; /* Üst ve alt boşluk */
    }

    /* Arama çubuğu stil */
    .search-bar {
        width: 100%; /* Kapsayıcı kadar geniş */
        padding: 10px;
        border: 1px solid #ccc; /* Çerçeve */
        border-radius: 5px; /* Köşeleri yuvarla */
        font-size: 16px; /* Yazı boyutu */
    }

</style>
<body>
    <div class="hero common-hero">
        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="hero-ct">
                        <h1>Tüm Fİlmler</h1>
                        <ul class="breadcumb">
                            <li class="active"><a href="#">Anasayfa</a></li>
                            <li> <span class="ion-ios-arrow-right"></span>Film Listesi</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <header>
        <div>
            <div class="search-container top-search">
                <input type="text" class="search-bar" placeholder="Bir film adı veya seri girin">
            </div>

        </div>
    </header>

    <div class="page-single">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="topbar-filter fw">
                        <p>Toplamda <span>1,608 Film</span> Bulundu</p>
                        <label>Sıralama</label>
                        <select>
                            <option value="popularity">Popularity Descending</option>
                            <option value="popularity">Popularity Ascending</option>
                            <option value="rating">Rating Descending</option>
                            <option value="rating">Rating Ascending</option>
                            <option value="date">Release date Descending</option>
                            <option value="date">Release date Ascending</option>
                        </select>
                        <a href="movielist.html" class="list"><i class="ion-ios-list-outline "></i></a>
                        <a href="moviegridfw.html" class="grid"><i class="ion-grid active"></i></a>
                    </div>


                    <div class="flex-wrap-movielist mv-grid-fw">

                       @await Component.InvokeAsync("_MovieListVC")
                     
                    </div>
                    <div class="topbar-filter">
                        <label>Movies per page:</label>
                        <select>
                            <option value="range">20 Movies</option>
                            <option value="saab">10 Movies</option>
                        </select>

                        <div class="pagination2">
                            <span>Page 1 of 2:</span>
                            <a class="active" href="#">1</a>
                            <a href="#">2</a>
                            <a href="#">3</a>
                            <a href="#">...</a>
                            <a href="#">78</a>
                            <a href="#">79</a>
                            <a href="#"><i class="ion-arrow-right-b"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

