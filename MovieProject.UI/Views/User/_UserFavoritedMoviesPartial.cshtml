        <div class="pagination2">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <a href="#" class="@(i == Model.CurrentPage ? " " : "")" data-page="@i">@i</a>
            }
        </div>

    </div>
</div>

