<body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <div class="hero user-hero">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div style="margin-right:22em" class="hero-ct">
                        <h1>Profilim</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-single">
        <div class="container">
            <div class="row ipad-width">
                <div class="col-md-3 col-sm-12 col-xs-12">
                    <div class="user-information">
                        <div class="user-img">
                            <a href="#"><img id="userimg" src="" style="width:170px;height:170px" alt=""><br></a>
                            <br />
                            <a href="#" class="redbtn">Change avatar</a>
                        </div>
                        <div class="user-fav">
                            <p>Account Details</p>
                            <ul>
                                <li class="active"><a href="userprofile.html">Profile</a></li>
                                <li><a href="userfavoritelist.html">Favorite movies</a></li>
                                <li><a href="userrate.html">Rated movies</a></li>
                            </ul>
                        </div>
                        <div class="user-fav">
                            <p>Others</p>
                            <ul>
                                <li><a href="#">Change password</a></li>
                                <li><a href="#">Log out</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-9 col-sm-12 col-xs-12">
                    <div class="form-style-1 user-pro" action="">


                        <form class="user" id="profileDetails">
                            <h4>Profil Bilgilerim</h4>
                            <div class="row">
                                <div class="col-md-6 form-it">
                                    <label>İsim</label>
                                    <input type="text" id="firstName">
                                </div>
                                <div class="col-md-6 form-it">
                                    <label>Soyisim</label>
                                    <input type="text" id="lastName">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-it">
                                    <label>Kullanıcı Adı</label>
                                    <input type="text" id="userName">
                                </div>
                                <div class="col-md-6 form-it">
                                    <label>E-Mail Adresi</label>
                                    <input type="text" id="email">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <input id="btnKaydet" class="submit" type="submit" value="Kaydet">
                                </div>
                            </div>
                        </form>


                        <form class="password" id="passwordForm">
                            <h4>02. Change password</h4>
                            <div class="row">
                                <div class="col-md-6 form-it">
                                    <label>Güncel Parola</label>
                                    <input type="text" id="oldPassword" placeholder="**********">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-it">
                                    <label>Yeni Parola</label>
                                    <input type="text" id="newPassword" placeholder="***************">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-it">
                                    <label>Yeni Parolayı Doğrula</label>
                                    <input type="text" id="confirmNewPassword" placeholder="*************** ">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <input id="btnParola" class="submit" type="submit" value="Kaydet">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/userjs.js"></script>
